<odoo>
    <record id="view_users_form_inherit_commitment_date" model="ir.ui.view">
        <field name="name">res.users.form.inherit.commitment.date</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='groups_id']" position="inside">
                <field name="groups_id" domain="[('id', '=', ref('restricciones_entregas.group_edit_commitment_date'))]"/>
            </xpath>
        </field>
    </record>
</odoo>
